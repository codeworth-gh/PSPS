# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /                         controllers.HomeCtrl.index
GET     /navbar                   controllers.HomeCtrl.sampleNavbar

# Users
GET     /bo/                      controllers.UserCtrl.userHome
GET     /bo/login                 controllers.UserCtrl.showLogin
POST    /bo/login                 controllers.UserCtrl.doLogin
POST    /bo/logout                controllers.UserCtrl.doLogout
GET     /bo/users/                controllers.UserCtrl.showUserList
GET     /bo/users/new             controllers.UserCtrl.showNewUserPage
POST    /bo/users/                controllers.UserCtrl.doSaveNewUser
GET     /bo/users/:id/edit        controllers.UserCtrl.showEditUserPage(id)
POST    /bo/users/:id/edit        controllers.UserCtrl.doSaveUser(id)
POST    /bo/api/users/            controllers.UserCtrl.apiAddUser
GET     /bo/forgotPassword        controllers.UserCtrl.showForgotPassword
POST    /bo/forgotPassword        controllers.UserCtrl.doForgotPassword
GET     /bo/resetPassword/:id     controllers.UserCtrl.showResetPassword(id)
POST    /bo/resetPassword/        controllers.UserCtrl.doResetPassword
GET     /bo/inviteUser/           controllers.UserCtrl.showInviteUser
POST    /bo/inviteUser/           controllers.UserCtrl.doInviteUser
GET     /bo/newUserInvitation/:id controllers.UserCtrl.showNewUserInvitation(id)
POST    /bo/newUserInvitation/    controllers.UserCtrl.doNewUserInvitation
POST    /bo/changePassword        controllers.UserCtrl.doChangePassword



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
